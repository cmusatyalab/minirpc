enum Color {
	RED = 0,
	ORANGE = 1,
	YELLOW = 2,
	GREEN = 3,
	BLUE = 4,
	INDIGO = 5,
	VIOLET = 6
};

struct ColorChoice {
	enum Color acceptable<>;
	enum Color preferred;
};

typedef int Count;

serverprocs {
	ChooseColor(ColorChoice) = 1;
	GetNumColors(void, Count) = 2;
}

servermsgs {
	CrayonSelected(Color) = 1;
}
